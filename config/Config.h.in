///////////////////////////////////////////////////////////////////////////////
//
//  Compile-time configuration.
//
//  Config.h.in is the source file.
//  Config.h is generated by cmake.
//
///////////////////////////////////////////////////////////////////////////////

#ifndef _USUL_CONFIG_H_
#define _USUL_CONFIG_H_


///////////////////////////////////////////////////////////////////////////////
//
//  Are we using atomic reference counting?
//
///////////////////////////////////////////////////////////////////////////////

#cmakedefine USUL_USE_ATOMIC_REFERENCE_COUNTER


///////////////////////////////////////////////////////////////////////////////
//
//  Should the code automatically create the singleton plugin manager?
//
///////////////////////////////////////////////////////////////////////////////

#cmakedefine USUL_AUTO_CREATE_SINGLETON_PLUGIN_MANAGER


///////////////////////////////////////////////////////////////////////////////
//
//  Should the code automatically delete the singleton plugin manager?
//
///////////////////////////////////////////////////////////////////////////////

#cmakedefine USUL_AUTO_DELETE_SINGLETON_PLUGIN_MANAGER


///////////////////////////////////////////////////////////////////////////////
//
//  Define the extension for the plugin files.
//
///////////////////////////////////////////////////////////////////////////////

#cmakedefine USUL_PLUGIN_EXTENSION "@USUL_PLUGIN_EXTENSION@"


///////////////////////////////////////////////////////////////////////////////
//
//  Should we ignore these Visual C++ warnings?
//
///////////////////////////////////////////////////////////////////////////////

#cmakedefine USUL_IGNORE_VCPP_WARNING_4251
#cmakedefine USUL_IGNORE_VCPP_WARNING_4275


///////////////////////////////////////////////////////////////////////////////
//
//  Possibly disable warning about dll interfaces.
//  This is the hammer, but is there a better way?
//
///////////////////////////////////////////////////////////////////////////////

#ifdef _WIN32
# ifdef USUL_IGNORE_VCPP_WARNING_4251
#  pragma warning ( disable : 4251 )
# endif
# ifdef USUL_IGNORE_VCPP_WARNING_4275
#  pragma warning ( disable : 4275 )
# endif
#endif


#endif // _USUL_CONFIG_H_
